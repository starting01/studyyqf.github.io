<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- org.hnist.dao.TeacherMapper对应的接口 -->
<mapper namespace="com.fd.dao.UserMapper">
    <!-- 判断是否存在指定学生 -->
    <select id="login" parameterType="User" resultType="User">
        select * from user WHERE userName=#{userName} and password=#{password}
    </select>
    
    <select id="allUsers" resultType="User">
    	select * from user
    </select>
    
    <insert id="addUser" parameterType="User">
    	insert into user(userName,password,email,sex,state,status,addDate,headPro)
    	values(#{userName},#{password},#{email},#{sex},1,#{status},#{addDate},#{headPro})
    </insert>
    
    <select id="searchUser" resultType="User">
    	select * from user where user_id=#{userId}
    </select>
    
    <select id="searchUserByName" resultType="User">
    	select * from user where userName=#{userName}
    </select>
    
    <delete id="deleteUser" parameterType="int">
    	delete from user where user_id=#{userId}
    </delete>
    
    <update id="updateUser" parameterType="User">
    	update user set userName=#{userName},password=#{password},email=#{email},sex=#{sex},
    	state=#{state},status=#{status},headPro=#{headPro} where user_id=#{userId}
    </update>
    
</mapper>